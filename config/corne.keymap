#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

&mt {
    flavor = "balanced";
    require-prior-idle-ms = <250>;
};

&lt {
    flavor = "balanced";
    require-prior-idle-ms = <250>;
};

/ {
    combos {
        compatible = "zmk,combos";

        combo {
            bindings = <&mo 3>;
            key-positions = <37 40>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "Base";
            bindings = <
&kp TAB           &kp Q             &kp W        &kp E           &kp R           &kp T      &kp Y      &kp U            &kp I            &kp O                &kp P                 &kp BSPC
&kp LEFT_SHIFT    &mt LEFT_SHIFT A  &mt LCTRL S  &mt LEFT_ALT D  &mt LEFT_GUI F  &kp G      &kp H      &mt RIGHT_GUI J  &mt RIGHT_ALT K  &mt RIGHT_CONTROL L  &mt RSHIFT SEMICOLON  &kp SQT
&kp LEFT_CONTROL  &kp Z             &kp X        &kp C           &kp V           &kp B      &kp N      &kp M            &kp COMMA        &kp DOT              &kp FSLH              &kp LEFT_ALT
                                                 &kp LGUI        &mo 1           &kp RET    &kp SPACE  &mo 2            &kp ESC
            >;
        };

        lower_layer {
            display-name = "Lower";
            bindings = <
&kp ESC           &kp N1          &kp N2      &kp N3                &kp N4                &kp N5              &kp N6     &kp N7         &kp N8       &kp N9     &kp N0  &kp BACKSPACE
&kp LEFT_SHIFT    &kp C_PREVIOUS  &kp C_NEXT  &kp C_VOLUME_UP       &kp C_VOLUME_DOWN     &kp C_MUTE          &kp LEFT   &kp DOWN       &kp UP       &kp RIGHT  &trans  &kp DELETE
&kp LEFT_CONTROL  &trans          &trans      &kp C_BRIGHTNESS_INC  &kp C_BRIGHTNESS_DEC  &kp C_PLAY_PAUSE    &kp HOME   &kp PAGE_DOWN  &kp PAGE_UP  &kp END    &trans  &kp LEFT_ALT
                                              &kp LGUI              &trans                &kp RET             &kp SPACE  &trans         &kp ESC
            >;
        };

        raise_layer {
            display-name = "Raise";
            bindings = <
&kp GRAVE         &kp EXCL  &kp AT  &kp HASH  &kp DLLR  &kp PRCNT      &kp CARET  &kp AMPS   &kp KP_MULTIPLY  &kp LPAR  &kp RPAR  &kp BSPC
&kp LEFT_SHIFT    &trans    &trans  &trans    &trans    &trans         &kp MINUS  &kp EQUAL  &kp LBKT         &kp RBKT  &kp BSLH  &kp TILDE
&kp LEFT_CONTROL  &trans    &trans  &trans    &trans    &trans         &kp UNDER  &kp PLUS   &kp LBRC         &kp RBRC  &kp PIPE  &kp LEFT_ALT
                                    &kp LGUI  &trans    &kp LG(RET)    &kp SPACE  &trans     &kp ESC
            >;
        };

        combo_layer {
            display-name = "Combo";
            bindings = <
&kp GRAVE         &kp F1        &kp F2        &kp F3        &kp F4        &kp F5          &kp F6     &kp F7  &kp F8   &kp F9  &kp F10  &kp BSPC
&kp LEFT_SHIFT    &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4    &trans     &trans  &trans   &trans  &trans   &trans
&kp LEFT_CONTROL  &trans        &trans        &trans        &trans        &trans          &trans     &trans  &trans   &trans  &trans   &bt BT_CLR
                                              &kp LGUI      &trans        &kp RET         &kp SPACE  &trans  &kp ESC
            >;
        };

        layer_4 {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
                        &trans  &trans  &trans    &trans  &trans  &trans
            >;
        };
    };
};
